@using NewLife
@using NewLife.Common;
@using NewLife.Cube.WebMiddleware;
@using NewLife.YuqueWeb.Entity
@{
    var set = CubeSetting.Current;
    var footer = Nav.Root.FindByPath("尾部") ?? Nav.Root;
}
<div class="container">
    @foreach (var nav in footer.Childs)
    {
        <div class="span3">
            <h3>@nav.Name</h3>
            @foreach (var item in nav.Childs)
            {
                <a href="@item.Url" target="@(item.Url.StartsWithIgnoreCase("http")?"_blank":"")">@item.Name</a>

                <br>
            }
        </div>
    }
</div>
<div style="margin-top:20px;" class="text-center">
    @if (!set.Copyright.IsNullOrEmpty())
    {
        <span>@set.Copyright</span>
    }
    @if (!set.Registration.IsNullOrEmpty())
    {
        <a href="https://beian.miit.gov.cn" target="_blank">@set.Registration</a>
    }
</div>